@using G5_MovieTicketBookingSystem.DTOs.MovieBookingPlan
<div class="ticket-plan-section padding-bottom padding-top">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-9 mb-5 mb-lg-0">
                <ul class="seat-plan-wrapper bg-five">
                    @foreach (var movieShowtimeDto in movieShowtimeDtos)
                    {
                        <li>
                            <div class="movie-name">
                                <div class="icons">
                                    <i class="far fa-heart"></i>
                                    <i class="fas fa-heart"></i>
                                </div>
                                <a href="#0" class="name">@movieShowtimeDto.Title</a>
                                <div class="location-icon">
                                    <i class="fas fa-map-marker-alt"></i>
                                </div>
                            </div>
                            <div class="movie-schedule">
                                @foreach (var showtime in movieShowtimeDto.Showtime)
                                {
                                    <div class="item">
                                        @showtime
                                    </div>
                                }                              
                            </div>
                        </li>
                    }
                </ul>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-10">
                <div class="widget-1 widget-banner">
                    <div class="widget-1-body">
                        <a href="#0">
                            <img src="assets/images/sidebar/banner/banner03.jpg" alt="banner">
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public IEnumerable<MovieShowtimeDto> movieShowtimeDtos { get; set; } = Array.Empty<MovieShowtimeDto>();
}
