@page "/checkout"
@using G5_MovieTicketBookingSystem.Repositories
@using G5_MovieTicketBookingSystem.Services.Impl
@inject IMovieService MovieService
@inject ISeatLockService SeatLockService

@code {
    private MovieDto? movie;
    private string remainingTime = "Loading...";
    private DateTime? lockExpiryTime;
    private DateTime? lockStartTime;

    // Khi trang được khởi tạo, tính toán thời gian còn lại và bắt đầu đếm ngược
    protected override async Task OnInitializedAsync()
    {
        try
        {
            movie = await MovieService.GetMovieByIdAsync(1); // Lấy thông tin phim

            if (movie != null)
            {
                int userId = 1; // Ví dụ lấy userId
                await CalculateRemainingTime(userId); // Tính toán thời gian còn lại
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error: {ex.Message}");
        }
    }

    // Tính toán thời gian còn lại từ thời gian hết hạn của vé
    private async Task CalculateRemainingTime(int userId)
    {
        try
        {
            var latestSeatLock = await SeatLockService.GetLatestSeatLockByUserIdAsync(userId);

            if (latestSeatLock != null)
            {
                lockExpiryTime = latestSeatLock.LockExpiryTime; // Lấy thời gian hết hạn vé
                lockStartTime = latestSeatLock.LockStartTime; // Lấy thời gian bắt đầu vé

                if (lockExpiryTime.HasValue && lockStartTime.HasValue)
                {
                    var timeRemaining = lockExpiryTime.Value - lockStartTime.Value;
                    remainingTime = $"{timeRemaining.Minutes:D2}:{timeRemaining.Seconds:D2}"; // Hiển thị thời gian chênh lệch
                }
            }
            else
            {
                remainingTime = "No seat locks found for this user."; // Nếu không có vé đã được giữ
            }
        }
        catch (Exception ex)
        {
            remainingTime = $"Error: {ex.Message}";
            Console.WriteLine($"Error calculating remaining time: {ex.Message}");
        }
    }
}

